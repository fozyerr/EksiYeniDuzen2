<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.fatih.eksiyeniduzen.YazarActivity$FragmentYazar">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView2"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="10dp"
        />



    <RelativeLayout
        android:id="@+id/yuklenmespin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yukleniyor"
            android:textSize="12sp"
            android:id="@+id/spintext"
            android:layout_marginStart="30dp"

            />


        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progressarkaplan"
            android:indeterminate="true"
            android:id="@+id/spinnn"
            style="?android:attr/progressBarStyleSmall"


            android:layout_marginEnd="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/spintext" />
    </RelativeLayout>

</RelativeLayout>
