<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/entrysayi"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/entrysayiarkaplan"
        android:gravity="center"
        android:textColor="?attr/baslikText"
        android:maxLines="1"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/basliktext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center|start"
        android:scrollHorizontally="false"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/entrysayi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entrysayi"
        app:layout_constraintTop_toTopOf="@+id/entrysayi" />
</android.support.constraint.ConstraintLayout>