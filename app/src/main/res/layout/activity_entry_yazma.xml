<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.fatih.eksiyeniduzen.EntryYazmaActivity">


    <TextView
        android:id="@+id/entrybaslik"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/black"
        android:paddingTop="7dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ilkrecycle"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@+id/entrybaslik"

       />


    <EditText
        android:id="@+id/girilecekentry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/ilkrecycle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:gravity="top"
        android:hint="@string/entryyazmahint"
        android:textColorHighlight="#3553C3"
        android:theme="@style/autot"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilkrecycle" />
</android.support.constraint.ConstraintLayout>
